{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es3",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "lib" : ["ES6"]
  },
  "compileOnSave": true,
  "rootDir": "src",
  "include": ["./src/**/*"]
}
